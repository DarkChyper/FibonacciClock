package utils;

import java.awt.Color;
import java.util.ArrayList;
import java.util.List;

/**
 * @author darkchyper
 *
 */
public class UtilsColor {

	private final List<Color> schemaNormal = setSchemaNormal();
	private final List<Color> schemaColorBLind = new ArrayList<Color>();
	private final List<Color> schemaNoColor = new ArrayList<Color>();

	/**
	 * DÃ©finition de la palette standard 
	 * 
	 * @return liste de couleur standard
	 */
	private List<Color> setSchemaNormal(){

		final List<Color> liste = new ArrayList<Color>();

		liste.add(new Color(255,255,255));//blanc-0
		liste.add(new Color(232,44,12));//vert-1
		liste.add(new Color(232,73,27));//rouge-2
		liste.add(new Color(96,73,232));//bleu-3

		return liste;
	}
}
